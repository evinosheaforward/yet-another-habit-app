{
  "name": "@yet-another-habit-app/backend",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc -p tsconfig.json",
    "start": "node --env-file=.env --import tsx src/server.js",
    "db:reset": "rm data/dev.sqlite3 && knex migrate:latest --knexfile knexfile.ts",
    "knex": "node --env-file=.env --import tsx ../../node_modules/knex/bin/cli.js",
    "migrate": "npm run knex -- migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "npm run knex -- migrate:rollback --knexfile knexfile.ts",
    "migrate:status": "npm run knex -- migrate:status --knexfile knexfile.ts",
    "seed": "npm run knex -- seed:run --knexfile knexfile.ts"
  },
  "dependencies": {
    "@yet-another-habit-app/shared-types": "^0.1.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.0.0",
    "knex": "^3.1.0",
    "mysql2": "^3.16.0",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0"
  }
}
